<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d90000</item>
        <item name="colorPrimaryDark">#de0000</item>
        <item name="colorAccent">#002aff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:titleTextStyle">@style/CustomtextColor</item>
        <item name="android:displayOptions">useLogo</item>
    </style>

    <style name="CustomtextColor" parent="@android:style/Theme">
        <item name="android:textColor">#00ff22</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
